  <meta http-equiv="cleartype" content="on">
</head>
<body class="<%= controller.controller_name+'_'+action_name -%>">
<div id="main" data-role="page" data-theme="c" class="type-home" data-add-back-btn="true">

    <div data-role="header" data-theme="c" data-position="fixed">
    <h1><%= image_tag "beer-logo.png" %></h1>
    <a href="#" data-icon="search"  class="search-b ui-btn-right">Search</a>

    <div class="search-form" data-role="fieldcontain">
        <input type="search" name="address" placeholder="address.." value="" />
    </div>

    </div>

  <div data-role="content" id="content">
      <%= yield %>
  </div>

    <div data-role="footer" class="nav-glyphish-example" data-theme="c" data-position="fixed">
      <div data-role="navbar" class="nav-glyphish-example" data-grid="d">
      <ul>
        <li><a href="/" id="location" data-icon="custom">Map</a></li>
        <li><a href="/beers/search" id="beer" data-icon="custom">Beers</a></li>
        <li><a href="/beers/venues" id="venues" data-icon="custom">Venues</a></li>
        <li><a href="/beers/new" id="add" data-icon="custom">Add</a></li>
        <li><a href="/pages/about" id="about-page" data-icon="custom">About</a></li>
      </ul>
      </div>
    </div>
</div>



</body>
</html>
