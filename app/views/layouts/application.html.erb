<!doctype html>
<head>
  <meta charset="utf-8">

  <%= favicon_link_tag 'beer-icon.png' %>
  <title>getbeer</title>
  <link rel="stylesheet" href="http://code.jquery.com/mobile/1.0b3/jquery.mobile-1.0b3.min.css" />
  <%= stylesheet_link_tag    "application" %>
  <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=true&key=ABQIAAAAl-IUE5-PNzD6MFUfJkhLWBRNx5mSnk_uhqemmKmNua51JBqGEhQyaWZWw4LawrjsczuHejSDYNi-og"></script>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js"></script>
  <script>
    $(document).bind("mobileinit", function(){
      $.mobile.touchOverflowEnabled = true;
      $.mobile.loadingMessage = "getting beer..";
    });
  </script>
  <script type="text/javascript" src="http://code.jquery.com/mobile/1.0b3/jquery.mobile-1.0b3.min.js"></script>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>


  <meta name="description" content="Getbeer, to get cheap beers around you">
  <meta name="author" content="A.rnaud">

  <!-- Mobile viewport optimization http://goo.gl/b9SaQ -->
  <meta name="HandheldFriendly" content="True">
  <meta name="MobileOptimized" content="320"/>
  <meta name="apple-mobile-web-app-capable" content="yes" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0; user-scalable=0;">

  <!-- Home screen icon  Mathias Bynens http://goo.gl/6nVq0 -->
