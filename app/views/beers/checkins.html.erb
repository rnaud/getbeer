<% sitemap "#{current_user.name}'s Recent Checkins" %>

<% current_user.checkins.each do |checkin| %>
.checkin
  .venue
    .icon
      = image_tag(checkin.venue.icon) if checkin.venue
    .content
      .name= "@ #{checkin.venue.name}" if checkin.venue
      .shout= checkin.shout
      .time= time_ago_in_words(checkin.created_at)
    /= checkin.inspect
<% end %>