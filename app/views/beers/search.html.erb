<div id="address_search" data-role="fieldcontain">
<%= form_tag "/beers/search", :method => :get do %>
  <%= text_field_tag :address, params[:address], :type => "search" ,:placeholder => "drink name.." %>
<% end %>
</div>

<% if @beers %>
  <ul data-role="listview">
    <% @beers.each do |b| %>
    <li>
      <%= link_to venue_details_beers_path(:venue_id => b.venue_id), :"data-transition" => "slideup" do %>
      <%= begin image_tag b.venue_icon, :class => "ui-li-icon" rescue nil end %>
      <%= b.text %>
      <span class="ui-li-count"><%= b.score.to_s %></span>
      <% end %>
    </li>
    <% end %>
  </ul>
<% end %>